{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"typeRoots": ["./node_modules/@types"],
		"outDir": "./dist",
		"rootDir": "./",
		"declaration": true,
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}